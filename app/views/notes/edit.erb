<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form method="post" action="/notes/<%= @note.id %>">
      <fieldset>
        <legend>Edit note</legend>
        <div class="form-group">
          <label for="intent" class="sr-only">Intent</label>
          <input type="text" id="intent" name="note[intent]"
            placeholder="Add an intent" value="<%= @note.intent %>"
            class="form-control">
        </div>
        <div class="form-group">
          <label for="explanation" class="sr-only">Explanation</label>
          <textarea id="explanation" name="note[explanation]"
            placeholder="Add a note"
            class="form-control"><%= @note.explanation %></textarea>
        </div>
        <div class="form-group">
          <label for="response" class="sr-only">Response</label>
          <input type="text" id="response" name="note[response]"
            placeholder="Add a response" value="<%= @note.response %>"
            class="form-control">
        </div>
        <div class="form-group">
          <input type="hidden" name="_method" value="patch">
          <input type="submit" value="Update the note" class="btn btn-danger">
        </div>
      </fieldset>
    </form>
  </div>
</div>
